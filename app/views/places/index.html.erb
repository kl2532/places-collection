<h1>Your Places:</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th>Public?</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.rating %></td>
        <% puts "Hola" %>
        <% puts current_user.first_name %>
        <%if place.public_place %>
          <td><%= "Yes" %></td>
        <% else %>
          <td><%= "No" %></td>
        <% end %>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ Add a Place', new_place_path %>
