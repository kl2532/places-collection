<%= form_for(@public_list) do |f| %>
<% if @public_list.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@public_list.errors.count, "error") %> prohibited this public_list from being saved:</h2>

  <ul>
    <% @public_list.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th>Address</th>
      <th>Add to List</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_user.places.each do |place| %>
    <tr>
      <td><%= place.name %></td>
      <td><%= place.rating %></td>
      <td><%= place.address.full_address %></td>
      <td><%= check_box_tag "place_ids[]", place.id, false, :id => "place_ids_#{place.id}" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
