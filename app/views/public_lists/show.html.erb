<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @public_list.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @public_list.description %>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th>Address</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
  	<% puts "**public_lists show" %>
  	<%puts @public_list.place_ids %>
  	<% puts "**public_lists show END----" %>
    <% @public_list.place_ids.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.rating %></td>
        <% puts place.address %>
        <%if place.address %>
          <td><%= place.address.full_address %></td>
        <% else %>
          <td><%= "" %></td>
        <% end %>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if session[:user_id] != nil%>
  <%= link_to 'Edit', edit_public_list_path(@public_list) %> |
  <%= link_to 'Back', public_lists_path %>
<% end %>
